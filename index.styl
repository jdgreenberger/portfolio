$white = #ffffff
$background = hsl(210, 45, 10)

html, body
  margin: 0
  padding: 0
  font-family: 'Josefin Slab', serif

.container
  position: absolute
  background-image: url('./assets/background.jpg')
  background-size: cover
  width: 100%
  height: 100%
  margin: 0 auto

  .title
    text-align: center
    color: $white
    font-size: 50px
    font-weight: bold
    margin-top: 50px

  .info
    text-align: center
    box-shadow: 3px 3px 5px
    background: $white
    border-radius: 4px
    width: 25%
    height: 450px
    margin-top: 35px
    margin-left: 37.5%

    .image
      margin-top: 25px
      width: 110px
      height: 110px
      background-image: url('./assets/bio-pic.jpg')
      border-radius: 55px

    .bio
      margin-top: 45px
      text-align: center
      margin-left: 25px
      margin-right: 25px
      font-size: 20px

    .social-media
      margin-top: 12%

      a
        display: inline-block

        &:not(:first-child)
          margin-left: 10%

        svg
          width: 35px
          height: 35px

          &:hover
            border-radius: 100%
            color: $background // IE8
            fill: $background
            transform: scale(1.25)
            transition: background-color .25s, transform .25s ease-out

  .arrows
    display: none
    margin-top: 40px
    text-align: center

    svg
     width: 40px

    path
      stroke: $white
      fill: transparent
      stroke-width: 1px
      animation: arrow 2s infinite
      -webkit-animation: arrow 2s infinite

      &.a1
        animation-delay:-1s;
        -webkit-animation-delay:-1s; /* Safari 和 Chrome */

      &.a2
        animation-delay:-0.5s;
        -webkit-animation-delay:-0.5s; /* Safari 和 Chrome */

      &.a3
        animation-delay:0s;
        -webkit-animation-delay:0s; /* Safari 和 Chrome */

  @keyframes arrow
    0% {opacity:0}
    40% {opacity:1}
    80% {opacity:0}
    100% {opacity:0}

  @-webkit-keyframes arrow /*Safari and Chrome*/
    0% {opacity:0}
    40% {opacity:1}
    80% {opacity:0}
    100% {opacity:0}

  .popup
    border: 1px solid darkgrey
    position: absolute
    margin-top: -80px
    margin-left: 18.5%
    background: $white
    border-radius: 5px
    height: 50px
    line-height: 50px
    opacity: 0
    -webkit-transition:all .5s ease-in-out

    .active
      opacity: 1

    .content
      display: inline-block
      overflow: auto


    .close:hover
      color: #06D85F

/* Mobile */
@media only screen and (max-width: 768px)

  .container
    background-size: none

    .info
      width: 75%
      margin-left: 12.5%
