$white = #ffffff
$background = hsl(210, 45, 10)

html, body
  margin: 0
  padding: 0
  font-family: 'Josefin Slab', serif

.container
  position: absolute
  background-image: url('./assets/background.jpg')
  background-size: cover
  width: 100%
  height: 100vh
  margin: 0 auto

  .title
    letter-spacing: 0.5px
    text-align: center
    color: $white
    font-size: 60px
    font-weight: bold
    margin-top: 3%

  .info
    text-align: center
    box-shadow: 3px 3px 5px
    background: $white
    border-radius: 4px
    width: 30%
    height: 67%
    margin-top: 3%
    margin-left: 35%

    .image
      margin-top: 8%
      width: 110px
      height: 110px
      background-image: url('./assets/bio-pic.jpg')
      border-radius: 55px

    .bio
      margin-top: 6%
      margin-left: 25px
      margin-right: 25px
      font-size: 20px
      line-height: 25px

      p
        margin-top: 7%

    .social-media
      margin-top: 5%

      .active
        opacity: 1

      .content
        display: inline-block
        overflow: auto

      a
        display: inline-block
        outline: none

        &:not(:first-child)
          margin-left: 10%

        svg
          outline: none
          cursor: pointer
          width: 35px
          height: 35px

          &:hover
            border-radius: 100%
            color: $background // IE8
            fill: $background
            transform: scale(1.25)
            transition: background-color .25s, transform .25s ease-out

  .projects
    background: #f4f2f2
    position: absolute
    top: 100vh
    text-align: center
    width: 100%

    .project
      $img-width = 20.3%
      $big-img-width = 23.7%
      $slide-width = 15.5%

      margin-top: 10px
      display: inline-block
      float: left
      width: 50%

      img
        width: 42%
        border: 1px solid darkgrey
        border-bottom: 0px
        box-shadow: 2px 2px 5px
        margin-bottom: 25px

        &.large
          width: 55%

        &:hover + .detail
          opacity: 1

        &:hover + .tdp, &:hover + .whereto
          left: $img-width + $slide-width

        &:hover + .jeand
          right: $img-width + $slide-width

        &:hover + .tonematrix
          right: $big-img-width +$slide-width

      p
        margin-bottom: 25px

      a
        color: black
        text-decoration: none

      .detail
        opacity: 0
        position: absolute
        border: 1px solid darkgrey
        box-shadow: 0px 2px 5px
        width: 15%
        -webkit-transition-duration: 0.5s
        -moz-transition-duration: 0.5s
        -o-transition-duration: 0.5s
        transition-duration: 0.5s

      .detail.tdp, .detail.whereto
        &:hover
          opacity: 1
          left: $img-width + $slide-width

      .detail.jeand
        &:hover
          opacity: 1
          right: $img-width + $slide-width

      .detail.tonematrix
        &:hover
          opacity: 1
          right: $big-img-width + $slide-width

      .whereto
        top: 15%
        left: $img-width

      .jeand
        top: 30%
        right: $img-width

      .tdp
        top: 60%
        left: $img-width

      .tonematrix
        top: 80%
        right: $big-img-width

  .arrows
    margin-top: 2%
    text-align: center

    svg
      cursor: pointer
      width: 40px

    path
      stroke: $white
      fill: transparent
      stroke-width: 1px
      animation: arrow 2s infinite
      -webkit-animation: arrow 2s infinite

      &.a1
        animation-delay:-1s;
        -webkit-animation-delay:-1s; /* Safari 和 Chrome */

      &.a2
        animation-delay:-0.5s;
        -webkit-animation-delay:-0.5s; /* Safari 和 Chrome */

      &.a3
        animation-delay:0s;
        -webkit-animation-delay:0s; /* Safari 和 Chrome */

  @keyframes arrow
    0% {opacity:0}
    40% {opacity:1}
    80% {opacity:0}
    100% {opacity:0}

  @-webkit-keyframes arrow /*Safari and Chrome*/
    0% {opacity:0}
    40% {opacity:1}
    80% {opacity:0}
    100% {opacity:0}

/* Mobile */
@media only screen and (max-width: 768px)

  body
    overflow-y: scroll

  .container
    background-image: url('./assets/background-mobile.jpg')
    background-size: 100% no-repeat

    .profile
      height: 100vh

      .title
        margin-left: 20px
        margin-right: 20px
        margin-top: 8%
        font-size: 50px

      .info
        margin-top: 8%
        height: 70%
        width: 75%
        margin-left: 12.5%

        .image
          margin-top: 10%

        .bio
          margin-top: 10%

          p
            margin-top: 15%

        .secondary-bio
          display: none

        .social-media
          margin-top: 15%

      .arrows
        display: none

    .projects

      .project
        float: none
        height: 400px
        width: 230px
        position: relative
        margin-bottom: 20px

        .detail
          top: 0
          left: 0
          opacity: 1
          background: rgba(0,0,0,.5)
          width: 100%
          height: 100%

          p, a
            font-weight: bold
            letter-spacing: 0.5px
            margin-left: 5px
            margin-right: 5px
            color: #ffffff

          .project-title
            margin-top 70%

        img, img.large
          box-shadow: none
          height: 100%
          width: 100%
